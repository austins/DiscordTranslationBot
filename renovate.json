{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "schedule:daily",
        "docker:pinDigests",
        ":configMigration",
        ":enableVulnerabilityAlerts",
        ":rebaseStalePrs",
        ":automergePr",
        ":automergeRequireAllStatusChecks",
        ":automergeMinor",
        ":automergeDigest"
    ],
    "packageRules": [
        {
            "description": "Schedule TUnit.Engine updates on early Monday mornings (before 4 AM)",
            "matchPackageNames": [
                "TUnit.Engine"
            ],
            "schedule": [
                "* 0-3 * * 1"
            ]
        }
    ]
}
